require 'rubygems'

version = ">= 0"

if ARGV.first =~ /^_(.*)_$/ and Gem::Version.correct? $1 then
  version = $1
  ARGV.shift
end

if File.directory? '_lib'
    Dir.chdir '_lib' do
        Dir['*.rb'].each do |file|
            require file
        end
    end
end

gem 'jekyll', version
load 'jekyll'
